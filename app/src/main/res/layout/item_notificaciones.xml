<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <android.support.v7.widget.CardView
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardCornerRadius="2dp"
       android:layout_gravity="center"
       app:cardElevation="10dp"
       app:cardUseCompatPadding="true">
       <LinearLayout
           android:layout_marginTop="@dimen/espacio_card_view"
           android:gravity="center"
           android:layout_gravity="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:textAlignment="center"
                   android:gravity="start"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="2"
                   android:text="Fecha"
                   android:textStyle="bold"
                   android:textSize="14dp"
                   android:singleLine="true"
                   android:ellipsize="marquee"
                   android:scrollHorizontally="true"
                   android:marqueeRepeatLimit="marquee_forever"
                   android:freezesText="true"
                   />
               <TextView
                   android:textAlignment="center"
                   android:gravity="start"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="Hace 30 días"
                   android:id="@+id/txt_fecha_notificacion"
                   android:singleLine="true"
                   android:textStyle="normal"
                   android:ellipsize="marquee"
                   android:scrollHorizontally="true"
                   android:marqueeRepeatLimit="marquee_forever"
                   android:freezesText="true"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:textAlignment="center"
                   android:gravity="start"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="2"
                   android:text="Tipo"
                   android:textStyle="bold"
                   android:textSize="14dp"
                   android:singleLine="true"
                   android:ellipsize="marquee"
                   android:scrollHorizontally="true"
                   android:marqueeRepeatLimit="marquee_forever"
                   android:freezesText="true"
                   />
               <TextView
                   android:textAlignment="center"
                   android:gravity="start"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="Renovación"
                   android:id="@+id/txt_renovacion"
                   android:singleLine="true"
                   android:textStyle="normal"
                   android:ellipsize="marquee"
                   android:scrollHorizontally="true"
                   android:marqueeRepeatLimit="marquee_forever"
                   android:freezesText="true"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:textAlignment="center"
                   android:gravity="start"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="2"
                   android:text="Notificación"
                   android:textStyle="bold"
                   android:textSize="14dp"
                   android:singleLine="true"
                   android:ellipsize="marquee"
                   android:scrollHorizontally="true"
                   android:marqueeRepeatLimit="marquee_forever"
                   android:freezesText="true"
                   />
               <TextView
                   android:textAlignment="center"
                   android:gravity="start"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="La póliza vence en 9 días"
                   android:id="@+id/txt_notificacion"
                   android:singleLine="false"
                   android:textStyle="normal"
                   android:ellipsize="marquee"
                   android:scrollHorizontally="true"
                   android:marqueeRepeatLimit="marquee_forever"
                   android:freezesText="true"/>
           </LinearLayout>
           <Button
               android:background="@drawable/background_button_pop"
               android:textAlignment="center"
               android:textColor="@color/colorWhite"
               android:textStyle="normal"
               android:gravity="center"

               android:layout_gravity="end"
               android:id="@+id/btn_notificacion"
               android:text="Acción"
               android:layout_weight="1"
               android:layout_width="wrap_content"
               android:layout_height="18dp"
               android:layout_marginRight="@dimen/espacio_card_view"
               android:layout_marginBottom="@dimen/espacio_card_view"/>
       </LinearLayout>
   </android.support.v7.widget.CardView>


</LinearLayout>