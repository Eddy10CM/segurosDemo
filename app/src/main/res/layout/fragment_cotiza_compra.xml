<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/baner_cotiza_compra">
        <TextView
            android:background="#66000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cotiza y Compra"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </LinearLayout>
    
    <TextView
        android:layout_marginTop="@dimen/espacio_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Me gustarÃ­a Cotizar y Comprar mi Seguro de"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textColor="@color/title_fragment"
        android:textStyle="bold"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <Button
            android:paddingLeft="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/car_blanco_button"
            android:text="Auto"
            android:gravity="left|center_vertical"
            android:layout_weight="1"
            android:id="@+id/btn_cotiza_auto"
            android:layout_marginTop="8dp"
            android:drawablePadding="8dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/background_button_pop"/>

        <Button
            android:paddingLeft="26dp"
            android:layout_marginLeft="@dimen/espacio_card_view"
            android:layout_weight="1"
            android:id="@+id/btn_cotiza_vida"
            android:gravity="left|center_vertical"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/corazon_naranja_button"
            android:text="Vida"
            android:drawablePadding="8dp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/btn_disable_cotiza_compra"/>
        <Button
            android:paddingLeft="3dp"
            android:paddingRight="2dp"
            android:layout_marginLeft="@dimen/espacio_card_view"
            android:layout_weight="1"
            android:id="@+id/btn_cotiza_funeraria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/injury_orange"
            android:text="Gastos Funerarios"
            android:singleLine="false"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/btn_disable_cotiza_compra"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/content_cotiza_compra"/>
</LinearLayout>